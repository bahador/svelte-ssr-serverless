{
  "scripts": {
    "build:all": "npm run build:server && npm run build:client",
    "build:client": "npx rollup -c rollup.config.js",
    "build:dev": "npm run build:server -- -w && npm run build:client -- -w",
    "build:server": "npx babel --presets=koa server/server.js --out-file server/build/server.js",
    "deploy:server": "npx serverless deploy",
    "clean": "rm -rf public server/build",
    "serve": "npx serverless offline start",
    "start": "npm run build:all && npm run serve"
  },
  "dependencies": {
    "@std/esm": "^0.22.0",
    "history": "^4.7.2",
    "koa": "^2.5.0",
    "koa-route": "^3.2.0",
    "path-to-regexp": "^2.1.0",
    "serverless-http": "^1.5.3",
    "svelte": "^1.43.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-koa": "^1.0.0",
    "rollup": "^0.56.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-svelte": "^3.1.0",
    "rollup-plugin-uglify": "^3.0.0",
    "serverless": "^1.26.1",
    "serverless-offline": "^3.18.0",
    "svelte": "^1.55.0"
  },
  "@std/esm": {
    "esm": "js",
    "cjs": true,
    "cache": false
  }
}
